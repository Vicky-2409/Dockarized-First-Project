                            </tr>
                        </thead>
                         {{#each couponData}}
                        <tbody>
                            <tr >
                                <td width="20%" class="text-center">
                                        <div class="info pl-3">
                                            <h6 class="mb-0 title">{{this._doc.code}}</h6>
                                        </div>
                                </td>
                                <td class="text-center" width="20%">{{this._doc.discount}}%</td>
                                 <td class="text-center" width="20%">{{this.expiryDate}}</td>


                                <td class="text-center" width="20%">
                                    <a href="/admin/delete_cpn?id={{this._doc._id}}" onclick="return confirm ('Are you sure want to delete?')" type="button" class="btn btn-primary">
                                        Delete
                                    </a>
                                </td>

                            </tr>

                        </tbody>
                        {{/each}}
                    </table> <!-- table-responsive.// -->
                </div>
            </div> <!-- card-body end// -->
        </div> <!-- card end// -->
        <div class="pagination-area mt-15 mb-50">
